<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="error"/>
    <property name="fileExtensions" value="java"/>

    <!-- Critical rule: No TO DO comments in production code -->
    <module name="RegexpSingleline">
        <property name="format" value="((//.*)|(\*.*))TODO"/>
        <property name="message" value="TODO comments are not allowed in production code. Complete or remove before committing."/>
    </module>

    <module name="TreeWalker">
        <!-- Critical rule: No System.out.println in production code -->
        <module name="Regexp">
            <property name="format" value="System\.(out|err)\.print"/>
            <property name="illegalPattern" value="true"/>
            <property name="message" value="System.out/err.print statements are not allowed. Use proper logging framework."/>
        </module>
    </module>
</module>
